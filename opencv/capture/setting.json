{
    "video_id": 0,
    "description": "will use /dev/video${video_id}",
    "default_width": 320,
    "default_height": 240,

    "use_realsense": true,
    "use_edge_test": true,
    "use_hsv_test": false,

    "output_dir": "outdir",
    "debug": false,

    "realsense": {
        "find_edge": false,
        "blur_radius": 3,
        "canny_threshold_min": 10,
        "canny_threshold_max": 20,
        "hough_threshold": 70,
        "hough_minlength": 130,
        "hough_maxlinegap": 45,
        "show_dist": false,
        "show_fps": true,
        "color_scheme": 2,
        "distance_limit": 0.0,
        "apply_sleep": false,
        "apply_align": true,
        "apply_disparity": true,
        "apply_dec": true,
        "apply_spatial": true,
        "apply_temporal": true,
        "apply_holefill": true,

        "max_degree": 60,
        "max_show_answer": 1,
        "ignore_margin": 20
    }
}
